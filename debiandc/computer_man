#
cd /usr/local/debiandc
source common-value

CHOICE=$(zenity --forms --text="User and Computer Management" --title="Screen of User&Computer Management" --width $WIDTH --height $HEIGHT \
	--add-combo="Computer Management" --combo-values="Computer List|Move Computer to Another OU|Delete Computer"
)

if [ "$?" = "1" ] || [ "$CHOICE" = "" ]
then
	bash manager
	exit 1
fi

if [ "$CHOICE" = "Computer List" ]
then
	bash computer_list
	exit 1
elif [ "$CHOICE" = "Move Computer to Another OU" ]
then
	bash computer_move_ou
	exit 1
elif [ "$CHOICE" = "Delete Computer" ]
then
	bash computer_delete
	exit 1
fi

clear

bash computer_man
