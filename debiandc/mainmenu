cd /usr/local/debiandc
source common-value

CHOICE=$(zenity --forms --text="Main Menu" --title="Main Menu of DebianDC" --width $WIDTH --height $HEIGHT \
	--add-combo="Server Settings" --combo-values="Set static IP|List Newtwork Cards|Show IP Address" \
        --add-combo="Server Setup" --combo-values="Install Active Directory|Uninstall Active Directory"
)

if [ "$CHOICE" = "|" ] && [ "$?" = "0" ] #OK_BUTTON
then
	bash mainmenu
	exit 1
fi

if [ "$CHOICE" = "" ] && [ "$?" = "0" ] #CANCEL_BUTTON
then
	exit 1
fi

if [ "$CHOICE" = "Set static IP| " ]
then
	bash set_static_ip
	exit 1
elif [ "$CHOICE" = "List Newtwork Cards| " ]
then
	bash show_network_cards
	exit 1
elif [ "$CHOICE" = "Show IP Address| " ]
then
	bash show_ip_address
	exit 1
elif [ "$CHOICE" = " |Install Active Directory" ]
then
	bash install_ad
	exit 1
fi
bash mainmenu
