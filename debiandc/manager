SCREEN_WIDTH=$(xwininfo -root | awk '$1=="Width:" {print $2}')
SCREEN_HEIGHT=$(xwininfo -root | awk '$1=="Height:" {print $2}')
echo WIDTH=$SCREEN_WIDTH > /usr/local/debiandc/common-value
echo HEIGHT=$SCREEN_HEIGHT >> /usr/local/debiandc/common-value

cd /usr/local/debiandc

CHOICE=$(zenity  --list  --text "Active Directory Management" --title="Active Directory Management" --width $SCREEN_WIDTH --height $SCREEN_HEIGHT --radiolist --column "" --column "options" \
FALSE "User & Computer Management" \
FALSE "Group Management" \
FALSE "OU Management" \
FALSE "DNS Management" \
FALSE "Settings" \
FALSE "Maintenance" \
FALSE "Reports"
)

if [ "$CHOICE" = "User & Computer Management" ]
then
bash user_man
elif [ "$CHOICE" = "Group Management" ]
then
bash group_man
elif [ "$CHOICE" = "OU Management" ]
then
bash ou_man
elif [ "$CHOICE" = "DNS Management" ]
then
bash dns_man
elif [ "$CHOICE" = "Settings & Maintenance" ]
then
bash settings
elif [ "$CHOICE" = "Reports" ]
then
bash reports
else
exit 1
fi
