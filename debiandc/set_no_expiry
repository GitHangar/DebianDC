cd /usr/local/debiandc
source common-value

CHOICE=$(zenity --forms --text="Set No Expiry" --title="Screen of Define Unlimited for Expiry to Account" --width $WIDTH --height $HEIGHT \
        --add-entry="UserName" )

if [ "$?" = "0" ] && [ "$CHOICE" = "" ] #OK
then
        bash set_no_expiry
        exit 1
elif [ "$?" = "1" ] && [ "$CHOICE" = "" ] #CANCEL
then
        bash user_man
        exit 1
fi

USERNAME=$(echo $CHOICE | cut -d "|" -f 1)

samba-tool user setexpiry --noexpiry $USERNAME 2>&1 | tee /tmp/outfile
cat /tmp/outfile | zenity --text-info --title="Result of Unlimited Expiration Definition for $USERNAME" --width $WIDTH --height $HEIGHT
bash user_man
